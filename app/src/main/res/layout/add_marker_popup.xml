<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="5dp">


    <View
        android:id="@+id/addmarker_bg"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:background="@drawable/addmarker_shape1">

    </View>



    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:background="@drawable/popup_close_circle"
        android:gravity="center"
        android:id="@+id/closePopup"
        android:text="X"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/challenge_name"
        android:text="@string/select_challenge"
        android:layout_gravity="center|top"
        android:layout_marginTop="25dp"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/add_marker_line1"
        android:backgroundTint="@color/white"/>
    <Spinner
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center|top"
        android:background="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="140dp"
        android:id="@+id/challenge_spinner"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="140dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/add_marker_line1"
        android:backgroundTint="@color/white"/>

    <Button
        android:id="@+id/set_challenge"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="40dp"
        android:background="@color/white"
        android:text="@string/set_challenge"
        android:textColor="@color/Black"
        android:textAllCaps="false" />

</androidx.cardview.widget.CardView>


