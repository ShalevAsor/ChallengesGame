<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5D1171"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/login_welcome"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="40dp"
            android:text="@string/login_welcome"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="352dp"
            android:background="@drawable/login_corners_bg"
            android:orientation="vertical"
            android:textAlignment="textStart">

            <EditText
                android:id="@+id/editFName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="@string/registerFirstName"
                android:inputType="textPersonName"
                android:textColorHint="@color/Gray"
                android:textColor="@color/Black"
                android:layout_gravity="end"
                android:paddingTop="10dp" />
            <EditText
                android:id="@+id/editLName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="@string/registerLastName"
                android:inputType="textPersonName"
                android:textColorHint="@color/Gray"
                android:textColor="@color/Black"
                android:layout_gravity="end"
                android:paddingTop="10dp" />
            <EditText
                android:id="@+id/editEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="@string/registerEmail"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/Gray"
                android:textColor="@color/Black"
                android:layout_gravity="end"
                android:paddingTop="10dp" />

            <EditText
                android:id="@+id/editPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/Black"
                android:ems="10"
                android:layout_gravity="end"
                android:hint="@string/registerPassword"
                android:textColorHint="@color/Gray"
                android:inputType="textPassword"
                android:textDirection="locale" />

            <TextView
                android:id="@+id/loginPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                android:text="@string/registerHaveAccountLogin"
                android:textColor="#36073E" />

            <Button
                android:id="@+id/btnSigUp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="#9C27B0"
                android:text="@string/registerSignUp"
                android:textAllCaps="false" />


        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>
